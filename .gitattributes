# Set default behavior to normalize line endings
* text=auto

# Force LF line endings for shell scripts and config files
*.sh     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.json   text eol=lf
*.xml    text eol=lf

# Force LF line endings for source code files
*.php    text eol=lf
*.js     text eol=lf
*.jsx    text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.html   text eol=lf
*.md     text eol=lf

