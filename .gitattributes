# Normalize line endings for text files
* text=auto

# Force LF endings for specific file types
*.sh     text eol=lf
*.yml    text eol=lf
*.yaml   text eol=lf
*.json   text eol=lf
*.xml    text eol=lf

# Source code files with LF endings
*.php    text eol=lf
*.js     text eol=lf
*.jsx    text eol=lf
*.ts     text eol=lf
*.tsx    text eol=lf
*.css    text eol=lf
*.scss   text eol=lf
*.html   text eol=lf
*.md     text eol=lf

# Binary files - do not modify
*.png    binary
*.jpg    binary
*.jpeg   binary
*.gif    binary
*.ico    binary
*.pdf    binary
*.zip    binary
*.gz     binary
*.tar    binary
*.woff   binary
*.woff2  binary
*.eot    binary
*.ttf    binary
*.otf    binary
